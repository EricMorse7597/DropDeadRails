 <% provide(:title, 'Log in') %>
 <h1>Log in</h1>

 <div class="row">
     <div class="col-md-6 col-md-offset-3">
         <%= form_with(url: login_path, scope: :session) do |field| %>

         <%= field.label :email %>
         <%= field.email_field :email, class: 'form-control' %>

         <%= field.label :password %>
         <%= field.password_field :password, class: 'form-control' %>

         <%= field.submit "Log in", class: "btn btn-primary" %>
         <% end %>

         <p>New User? <%= link_to "Sign up now!", signup_path %></p>
     </div>
 </div>